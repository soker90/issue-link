---
import { Icon } from 'astro-icon/components';
import { getPermalink } from '~/utils/permalinks';
import Button from '../ui/Button.astro';
export interface Props {
  items: Array<String>;
  title: String;
}

const { items, title } = Astro.props;
---

<div class="flex flex-col gap-4 lg:p-4 p-2 rounde-lg m-2">
  <div class="mt-2 md:mt-3 mx-auto text-xl text-gray-500 dark:text-slate-400 font-medium">{title}</div>

  {
    items.map((item) => (
      <Button
        variant="secondary"
        class="md:p-4 px-3 flex justify-between no-underline border-2 border-gray-200 hover:border-gray-300 hover:shadow-lg dark:hover:shadow-none transition-all"
        href={item}
        icon="tabler:chevron-right"
      >
        {item}
      </Button>
    ))
  }
</div>
